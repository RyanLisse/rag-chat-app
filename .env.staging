# Staging Environment Configuration
# These values should be configured in your CI/CD secrets

# App
NODE_ENV=staging
NEXT_PUBLIC_APP_URL=https://staging-rag-chat.vercel.app

# Database
DATABASE_URL=${DATABASE_URL_STAGING}
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=${REDIS_URL_STAGING}

# Auth
AUTH_SECRET=${AUTH_SECRET_STAGING}
AUTH_URL=https://staging-rag-chat.vercel.app

# AI Providers
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
XAI_API_KEY=${XAI_API_KEY}

# Blob Storage
BLOB_READ_WRITE_TOKEN=${BLOB_READ_WRITE_TOKEN}

# Monitoring
NEXT_PUBLIC_POSTHOG_KEY=${POSTHOG_KEY_STAGING}
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=${SENTRY_DSN_STAGING}

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Logging
LOG_LEVEL=info