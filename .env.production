# Production Environment Configuration
# These values must be configured in your production secrets

# App
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://rag-chat.vercel.app

# Database
DATABASE_URL=${DATABASE_URL_PRODUCTION}
DATABASE_POOL_SIZE=50

# Redis
REDIS_URL=${REDIS_URL_PRODUCTION}

# Auth
AUTH_SECRET=${AUTH_SECRET_PRODUCTION}
AUTH_URL=https://rag-chat.vercel.app

# AI Providers
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
XAI_API_KEY=${XAI_API_KEY}

# Blob Storage
BLOB_READ_WRITE_TOKEN=${BLOB_READ_WRITE_TOKEN}

# Monitoring
NEXT_PUBLIC_POSTHOG_KEY=${POSTHOG_KEY_PRODUCTION}
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=${SENTRY_DSN_PRODUCTION}

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true

# Logging
LOG_LEVEL=error

# Security
SECURE_HEADERS=true
CSP_REPORT_URI=https://rag-chat.report-uri.com/r/d/csp/enforce